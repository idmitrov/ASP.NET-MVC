@using System.Globalization
@model PhC.App.Models.ViewModels.ContestConciseViewModel
@{
    ViewBag.Title = "ContestConciseViewModel";
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.ActionLink(Model.Title, "Details", "Contest", routeValues: new {id = Model.Id}, htmlAttributes: null)</h3>
            </div>
            <div class="panel-body">
                <p>created by @(Model.Author) on @Model.Date.ToString("dd.MMMM.yyyy", CultureInfo.InvariantCulture), entries: @Model.EntriesCount</p>
                <p>@Model.Description</p>
                
            </div>
        </div>
    </div>
</div>
