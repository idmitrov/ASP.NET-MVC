<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ABRUPLE App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" title="ABRUPLE">
                    <h1 class="navbar-brand">
                        <img src="~/Content/images/contest-logo.png" alt="ABPRULE-logo" width="64" height="64" />
                    </h1>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav list-group-item">
                    <li>
                        <a href="/" id="home-btn" class="btn btn-info" title="Home">
                            <span class="glyphicon glyphicon-home"></span>
                        </a>
                    </li>
                    <li>
                        @Html.ActionLink("Contests", "Index", "Contest", null, new { title="Contests",  @class = "btn btn-default" })
                    </li>
                    <li>
                        @if (@User.Identity.IsAuthenticated)
                        {
                            // TODO: THINK ABOUT FORGERY TOKEN ? Y/N
                            using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "navbar-form navbar-left input-group", role = "search" }))
                            {
                                <div class="input-group">
                                    <input id="main-input-search" type="search" placeholder="Search..." class="form-control" aria-label="...">
                                    <div class="input-group-btn">
                                        <button type="button" title="Search" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="glyphicon glyphicon-search"></span>
                                            <span class="caret"></span>
                                        </button>

                                        <ul class="dropdown-menu">
                                            <li><a href="#" title="Search for user">User</a></li>
                                            <li><a href="#" title="Search for contest">Contest</a></li>
                                        </ul>
                                    </div>
                                </div>
                            }
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ABRUPLE</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUI")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#create-contest-form-content').draggable();

            $('#main-input-search').focus(function () {
                    
            });
        });
    </script>

</body>
</html>
