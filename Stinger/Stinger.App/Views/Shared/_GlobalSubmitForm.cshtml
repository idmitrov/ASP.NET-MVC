@if (Request.IsAuthenticated)
{
     using (Html.BeginForm("NewSting", "Sting", FormMethod.Post, new { @class = "navbar-right", id = "global-submit-form" }))
    {
        @Html.AntiForgeryToken()

        <div id="global-submit-form-dialog" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div id="global-dialog-content" class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" data-target="#global-submit-form-dialog">&times;</button>
                        <h4 class="modal-title">Stinger</h4>
                    </div>
                    <div id="modal-body" class="modal-body">
                        @Html.TextArea("Content", new { @rows = 10, @class = "text-content-custom", placeholder = "Type..." })
                        <input type="hidden" id="global-submit-form-entityId" name="entityId" value="" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal" data-target="#global-form-dialog">Cancel</button>

                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    }
}